<UserControl
    x:Class="HotelBooking.Presentation.Views.BookingsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:view="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:viewmodels="clr-namespace:HotelBooking.Presentation.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:BookingsListViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Grid>
        <ui:SimpleStackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="10"
            Visibility="{Binding UserHasNoBookings, Converter={StaticResource BoolToVis}}">
            <ui:SymbolIcon Symbol="Calendar">
                <ui:SymbolIcon.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </ui:SymbolIcon.LayoutTransform>
            </ui:SymbolIcon>
            <TextBlock FontSize="18" Text="Du har inga bokningar" />
        </ui:SimpleStackPanel>
        <DataGrid
            Width="1000"
            Margin="0,100,0,0"
            HorizontalAlignment="Center"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Bookings}"
            SelectedIndex="0"
            Style="{ui:StaticResource DefaultDataGridStyle}">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="60"
                                Height="60"
                                Margin="5"
                                Source="https://source.unsplash.com/1000x700/?building,hotel"
                                Stretch="Fill" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Hotel.Name}" Header="Hotell" />
                <DataGridTextColumn Binding="{Binding CheckInDate}" Header="Incheckning" />
                <DataGridTextColumn Binding="{Binding CheckOutDate}" Header="Utcheckning" />
                <DataGridTextColumn Binding="{Binding TotalPrice, ConverterCulture='sv-SE', StringFormat='\{0: #,##0 kr\}'}" Header="Pris" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>


