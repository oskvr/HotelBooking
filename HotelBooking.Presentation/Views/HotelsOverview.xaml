<UserControl
    x:Class="HotelBooking.Presentation.Views.HotelsOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <ui:SimpleStackPanel>
        <TextBlock Text="{Binding SelectedHotel.Name}" />
        <ui:GridView
            HorizontalAlignment="Center"
            ItemsSource="{Binding Hotels}"
            SelectedItem="{Binding SelectedHotel}">
            <ui:GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Width="200"
                        Height="300"
                        Margin="10">
                        <Image Source="{Binding ImageUrl}" Stretch="UniformToFill" />
                        <StackPanel Margin="0,10">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock
                                Foreground="{ui:ThemeResource SystemControlPageTextBaseMediumBrush}"
                                Style="{ui:ThemeResource CaptionTextBlockStyle}"
                                Text="{Binding Country}" />
                            <ui:RatingControl
                                IsReadOnly="True"
                                MaxRating="5"
                                PlaceholderValue="{Binding RatingScore}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ui:GridView.ItemTemplate>
            <ui:GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ui:GridView.ItemsPanel>
        </ui:GridView>
    </ui:SimpleStackPanel>

</UserControl>
