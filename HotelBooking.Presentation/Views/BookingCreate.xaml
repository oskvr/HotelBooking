<UserControl
    x:Class="HotelBooking.Presentation.Views.BookingCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ui:SimpleStackPanel>
            <TextBlock FontSize="36" Text="{Binding Booking.HotelId}" />
            <TextBlock Text="Check In Date" />
            <DatePicker
                DisplayDateStart="{Binding Booking.CheckInDate}"
                SelectedDate="{Binding Booking.CheckInDate, Mode=TwoWay}"
                Style="{ui:StaticResource DefaultDatePickerStyle}" />
            <TextBlock Text="Check Out Date" />
            <DatePicker
                DisplayDateStart="{Binding Booking.CheckInDate}"
                SelectedDate="{Binding Booking.CheckOutDate, Mode=TwoWay}"
                Style="{ui:StaticResource DefaultDatePickerStyle}" />

            <Button
                Command="{Binding CreateBookingCommand}"
                Content="Submit"
                Style="{ui:StaticResource AccentButtonStyle}" />
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
