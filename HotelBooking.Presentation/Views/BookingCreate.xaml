<UserControl
    x:Class="HotelBooking.Presentation.Views.BookingCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:view="clr-namespace:HotelBooking.Presentation.Views"
    xmlns:viewmodels="clr-namespace:HotelBooking.Presentation.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:BookingCreateViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ui:SimpleStackPanel>
            <TextBlock FontSize="36" Text="{Binding Booking.HotelId}" />
            <TextBlock Text="Check In Date" />
            <TextBlock Style="{ui:StaticResource HeaderTextBlockStyle}" Text="Select a date:" />
            <DatePicker
                DisplayDateStart="{Binding x:Static sys:DateTime.Now}"
                SelectedDate="{Binding Booking.CheckInDate, Mode=TwoWay}"
                Style="{ui:StaticResource DefaultDatePickerStyle}" />
            <TextBlock Text="{Binding Booking.CheckOutDate}"/>
            <TextBlock Style="{ui:StaticResource HeaderTextBlockStyle}" Text="Select a room:" />
            <ui:RadioButtons ItemsSource="{Binding RoomTypes}" SelectedItem="{Binding Booking.RoomType}">
                <ui:RadioButtons.ItemTemplate>
                    <DataTemplate>
                        <RadioButton>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding DataContext.BookingUpdatedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:BookingCreate}}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock Text="{Binding Type}" />
                        </RadioButton>
                    </DataTemplate>
                </ui:RadioButtons.ItemTemplate>
            </ui:RadioButtons>

            <TextBlock Style="{ui:StaticResource HeaderTextBlockStyle}" Text="Select booking extras:" />
            <ui:ListView ItemsSource="{Binding BookingExtras}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <ui:SimpleStackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding DataContext.BookingUpdatedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:BookingCreate}}}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <TextBlock Text="{Binding BookingExtra.Type}" />
                            </CheckBox>
                            <TextBlock Text="{Binding BookingExtra.Cost, StringFormat='{}{0:c}'}" />
                        </ui:SimpleStackPanel>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
            <TextBlock FontSize="36" Text="{Binding TotalPrice}" />
            <Button
                Command="{Binding CreateBookingCommand}"
                Content="Submit"
                Style="{ui:StaticResource AccentButtonStyle}" />
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
